{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/functions/**",
      "**/lib/**"
    ],
    "redirects": [
      {
        "source": "/public/:file",
        "destination": "/:file",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "/playlist/**", "function": "returnPlaylist" },
      { "source": "**/:file*.js", "destination": "/:file.js" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
