{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/**/:file*.js",
        "destination": "/:file.js",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/playlist/*",
        "function": "returnPlaylist"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
